<?xml version='1.0' encoding='utf-8'?>
<widget id="nz.co.acc.bbq" version="0.0.1" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>ACC Fixit</name>
    <description>
      ACCs Fixit feedback app
  </description>
    <author email="hello@carson.kiwi" href="www.carson.kiwi">
      Carson Bruce
  </author>
    <content src="index.html" />
    <plugin name="cordova-plugin-whitelist" spec="1" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <platform name="android">
        <allow-intent href="market:*" />
    </platform>
    <platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
    </platform>
    <!--<preference name="Orientation" value="portrait" />-->
    <!--<preference name="Fullscreen" value="true" />-->
    <engine name="android" spec="~5.1.1" />
    <engine name="ios" spec="~4.1.1" />
    <icon src="client/assets/icons/android/xxxhdpi.png" />
    <platform name="android">
        <icon density="mdpi" src="client/assets/icons/android/mdpi.png" />
        <icon density="hdpi" src="client/assets/icons/android/hdpi.png" />
        <icon density="xhdpi" src="client/assets/icons/android/xhdpi.png" />
        <icon density="xxhdpi" src="client/assets/icons/android/xxhdpi.png" />
        <icon density="xxxhdpi" src="client/assets/icons/android/xxxhdpi.png" />
    </platform>
    <platform name="ios">
        <icon height="180" src="client/assets/icons/apple/apple-icon-180x180.png" width="180" />
        <icon height="60" src="client/assets/icons/apple/apple-icon-60x60.png" width="60" />
        <icon height="120" src="client/assets/icons/apple/apple-icon-120x120.png" width="120" />
        <icon height="76" src="client/assets/icons/apple/apple-icon-76x76.png" width="76" />
        <icon height="152" src="client/assets/icons/apple/apple-icon-152x152.png" width="152" />
        <icon height="57" src="client/assets/icons/apple/apple-icon-57x57.png" width="57" />
        <icon height="114" src="client/assets/icons/apple/apple-icon-114x114.png" width="114" />
        <icon height="72" src="client/assets/icons/apple/apple-icon-72x72.png" width="72" />
        <icon height="144" src="client/assets/icons/apple/apple-icon-144x144.png" width="144" />
    </platform>

    <plugin name="cordova-plugin-statusbar" spec="~2.1.3" />
    <preference name="StatusBarBackgroundColor" value="#0f272f" />
    <preference name="StatusBarStyle" value="blacktranslucent" />
  <preference name="StatusBarOverlaysWebView" value="false" />

  <plugin name="cordova-plugin-splashscreen" spec="~3.2.2" />

    <platform name="android">
      <splash src="client/assets/splash/android/drawable-mdpi/background.9.png" density="land-mdpi"/>
      <splash src="client/assets/splash/android/drawable-mdpi/background.9.png" density="port-mdpi"/>
      <splash src="client/assets/splash/android/drawable-ldpi/background.9.png" density="land-ldpi"/>
      <splash src="client/assets/splash/android/drawable-ldpi/background.9.png" density="port-ldpi"/>
      <splash src="client/assets/splash/android/drawable-hdpi/background.9.png" density="land-hdpi"/>
      <splash src="client/assets/splash/android/drawable-hdpi/background.9.png" density="port-hdpi"/>
      <splash src="client/assets/splash/android/drawable-xhdpi/background.9.png" density="land-xhdpi"/>
      <splash src="client/assets/splash/android/drawable-xhdpi/background.9.png" density="port-xhdpi"/>
      <splash src="client/assets/splash/android/drawable-xxhdpi/background.9.png" density="land-xxhdpi"/>
      <splash src="client/assets/splash/android/drawable-xxhdpi/background.9.png" density="port-xxhdpi"/>
      <splash src="client/assets/splash/android/drawable-xxxhdpi/background.9.png" density="land-xxxhdpi"/>
      <splash src="client/assets/splash/android/drawable-xxxhdpi/background.9.png" density="port-xxxhdpi"/>
    </platform>

    <platform name="ios">
      <!-- images are determined by width and height. The following are supported -->
      <splash src="client/assets/splash/apple/Default-Portrait.png" width="320" height="480"/>
      <splash src="client/assets/splash/apple/Default-Portrait@2x.png" width="640" height="960"/>
      <!--<splash src="client/assets/splash/apple/Default-Portrait~ipad.png" width="768" height="1024"/>-->
      <!--<splash src="client/assets/splash/apple/Default-Portrait@2x~ipad.png" width="1536" height="2048"/>-->
      <!--<splash src="client/assets/splash/apple/Default-Landscape~ipad.png" width="1024" height="768"/>-->
      <!--<splash src="client/assets/splash/apple/Default-Landscape@2x~ipad.png" width="2048" height="1536"/>-->
      <splash src="client/assets/splash/apple/Default-568h@2x.png" width="640" height="1136"/>
      <splash src="client/assets/splash/apple/Default-667h@2x.png" width="750" height="1334"/>
      <splash src="client/assets/splash/apple/Default-Portrait-736h@3x.png" width="1242" height="2208"/>
    </platform>


    <platform name="browser">
      <preference name="SplashScreenBackgroundColor" value="#0f272f" />
    </platform>


    <preference name="FadeSplashScreen" value="true"/>
    <preference name="FadeSplashScreenDuration" value="400"/>
    <preference name="ShowSplashScreenSpinner" value="false"/>
    <preference name="SplashMaintainAspectRatio" value="false" />
    <preference name="AutoHideSplashScreen" value="false" />
    <preference name="SplashShowOnlyFirstTime" value="true" />




</widget>
